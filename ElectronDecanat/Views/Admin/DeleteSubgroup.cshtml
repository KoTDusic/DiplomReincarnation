                @Html.EditorFor(model => model.SubGroupNumber, new {htmlAttributes = new {@readonly = "readonly", @class = "form-control"}})
                @Html.ValidationMessageFor(model => model.SubGroupNumber, "", new {@class = "text-danger"})
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Удалить" class="btn btn-primary"/>
        </div>
    </div>
