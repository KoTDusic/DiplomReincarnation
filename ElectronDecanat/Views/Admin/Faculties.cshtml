@model List<Models.Faculty>
@{
    ViewBag.Title = "Faculties";
}

<h2>Факультеты</h2>
<h4>Факультетов (@Model.Count):</h4>
<table id="main-table">
    <thead>
    <tr>
        <th>Факультет</th>
        @* <th></th> *@
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>

    @foreach (var faculty in Model)
    {
        <tr>
            <td>@faculty.FacultyName</td>
            @* <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()"> *@
            @*     @Html.ActionLink("Подробнее", "Specialitis", new { faculty_id = Model[i].id }) *@
            @* </td> *@
            <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                @Html.ActionLink("Редактировать", "EditFaculty", new { id = faculty.Id})
            </td>
            <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                @Html.ActionLink("Удалить", "DeleteFaculty", new { id = faculty.Id })
            </td>
        </tr>
    }

    </tbody>
</table>
<div>
    <button class="clicable btn btn-default" onclick="this.getElementsByTagName('a')[0].click()">@Html.ActionLink("Добавить", "AddFaculty")</button>
</div>
<script type="text/javascript">
    $( document ).ready(function() {
        $('#main-table').DataTable(russian_lang);
    });
    </script>