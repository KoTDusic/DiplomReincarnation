@model List<Models.Group>
@{
    ViewBag.Title = "Groups";
}
<br/>
<h3>Факультет: @ViewBag.faculty</h3>
<h4>Специальность: @ViewBag.speciality_name</h4>
<h4>Групп (@Model.Count):</h4>
<table id="main-table">
    <thead>
    <tr>
        <th>Курс-Группа</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>

    @foreach (var group in Model)
    {
        <tr>
            <td>@group.Coors-@group.GroupNumber</td>
            <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                @Html.ActionLink("Подробнее", "Subgroups", new {group_id = group.Id})
            </td>
            <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                @Html.ActionLink("Удалить", "DeleteGroup", new {id = group.Id})
            </td>
        </tr>
    }

    </tbody>
</table>
<div>
    <button class="clicable btn" onclick="this.getElementsByTagName('a')[0].click()">
        @Html.ActionLink("Добавить", "AddGroup", new {speciality_id = ViewBag.speciality_id})
    </button>
</div>
<br/>
@Html.ActionLink("Назад", "Specialitys", new {faculty_id = ViewBag.faculty_id})
<script type="text/javascript">
            document.onload = new function () {
                $('#main-table').DataTable(russian_lang);
            };
        </script>