@model List<Models.Speciality>
@{
    ViewBag.Title = "Specialitis";
}
<br/>
<h3>Специальности на факультете @ViewBag.faculty</h3>
<h4>Специальностей (@Model.Count):</h4>
<table id="main-table">
    <thead>
    <tr>
        <th>Специальность</th>
        <th></th>
        @* <th></th> *@
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @{
        foreach (var speciality in Model)
        {
            <tr>
                <td>@speciality.SpecialityName</td>
                <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                    @Html.ActionLink("Подробнее", "Disciplines", new {speciality_id = speciality.Id})
                </td>
                @* <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()"> *@
                @*     @Html.ActionLink("Группы(" + Model[i].group_count + ")", "Groups", new { speciality_id = Model[i].id }) *@
                @* </td> *@
                <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                    @Html.ActionLink("Редактировать", "EditSpeciality", new {id = speciality.Id, faculty_id = speciality.FacultyId})
                </td>
                <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                    @Html.ActionLink("Удалить", "DeleteSpeciality", new {id = speciality.Id, faculty_id = speciality.FacultyId})
                </td>
            </tr>
        }
    }
    </tbody>
</table>
<div>
    <button class="clicable btn" onclick="this.getElementsByTagName('a')[0].click()">@Html.ActionLink("Добавить", "AddSpeciality", new {faculty_id = ViewBag.faculty_id})</button>
    <br/>
    @Html.ActionLink("Назад", "Faculties")
</div>
<script type="text/javascript">
        document.onload=new function () {
            $('#main-table').DataTable(russian_lang);
        };
    </script>