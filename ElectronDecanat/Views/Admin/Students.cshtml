@model List<Models.Student>
@{
    ViewBag.Title = "Students";
}
<h3>Факультет: @ViewBag.faculty</h3>
<h4>Специальность: @ViewBag.speciality_name</h4>
<h4>Курс-группа-подгруппа: @ViewBag.coors-@ViewBag.group_number-@ViewBag.subgroup_number</h4>
<h4>Студентов (@Model.Count):</h4>
<body>
<table id="main-table">
    <thead>
    <tr>
        <th>Студент</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>

    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Fio</td>
            <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                @Html.ActionLink("Редактировать", "EditStudent", new { id = student.Id })
            </td>
            <td class="clicable" onclick="this.getElementsByTagName('a')[0].click()">
                @Html.ActionLink("Удалить", "DeleteStudent", new { id = student.Id })
            </td>
        </tr>
    }

    </tbody>
</table>
<div>
    <button class="clicable btn" onclick="this.getElementsByTagName('a')[0].click()">
        @Html.ActionLink("Добавить", "AddStudent", new { subgroup_id = ViewBag.subgroup_id })
    </button>
</div>
<br />
@Html.ActionLink("Назад", "Subgroups", new { group_id = ViewBag.group_id })
<script type="text/javascript">
            document.onload = new function () {
                $('#main-table').DataTable(russian_lang);
            };
        </script>
</body>