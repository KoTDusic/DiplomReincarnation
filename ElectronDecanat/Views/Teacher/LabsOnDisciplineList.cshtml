@model System.Collections.Generic.List<Models.Lab>
@{
    ViewBag.Title = "LabsOnDisciplineList";
}
<table id="main-table">
    <thead>
    <tr>
        <th>Лабораторная</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>

    @foreach (var lab in Model)
    {
        <tr>
            <td>@lab.LabName</td>
            <td class="clicable" onclick="this.firstChild.click()">@Html.ActionLink("Редактировать", "EditLab", new {id = lab.Id})</td>
            <td class="clicable" onclick="this.firstChild.click()">@Html.ActionLink("Удалить", "DeleteLab", new {id = lab.Id})</td>
        </tr>
    }

    </tbody>
</table>
<button class="clicable btn" onclick="this.getElementsByTagName('a')[0].click()">@Html.ActionLink("Добавить", "AddLab", new {discipline_id = ViewBag.discipline_id})</button>
<br/>
@Html.ActionLink("Назад", "LabsList")
<script type="text/javascript">
        document.onload = new function ()
        {
            $('#main-table').DataTable(russian_lang);
        }
    </script>